
{{#is page_type 'front'}}

{{else}}
<div id="signup-form-trigger">
	<a class="trigger" href="#signup-form-overlay">
		<span class="icon icon-sign-up"></span>
		<span>Sign up</span>
	</a>
	<div class="form-signup-cta">
		<h2>Get your personal support programme</h2>
		<a href="#signup-form-overlay">
			Sign up here
			<span class="icon icon-arrow-right"></span>
		</a>
	</div>
</div>
{{/is}}

<div id="signup-form-overlay" class="form-signup mfp-hide">


	<form id="form-signup" name="signup">
		<div class="form-step active">
			<div class="form-header">
				<h1>Please fill out details</h1>
				<p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis.</p>
			</div>

			<div class="form-row">
				<label class="input-text sm" for="signup-firstname">
					<div class="label">First name</div>
					<input type="text" id="signup-firstname" name="firstname">
				</label>

				<label class="input-text sm" for="signup-lastname">
					<div class="label">Last name</div>
					<input type="text" id="signup-lastname" name="last-name">
				</label>

				<label class="input-text sm" for="signup-email">
					<div class="label">E-mail address</div>
					<input type="email" id="signup-email" name="email">
				</label>
			</div>


			<h2>Since when are you using a catheter?</h2>
			
			<div class="form-row date-gender-mobility">

				<div class="form-wrapper select-group date-group">
					<label class="input-select date-year" for="signup-catheterdate-year">
						<select id="signup-catheterdate-year" name="year">
							<option value="">Year</option>
							<option value="2010">2010</option>
							<option value="2011">2011</option>
							<option value="2012">2012</option>
							<option value="2013">2013</option>
						</select>
					</label>

					<label class="input-select date-month" for="signup-catheterdate-month">
						<select id="signup-catheterdate-month" name="month">
							<option value="">Month</option>
							<option value="01">January</option>
							<option value="02">February</option>
							<option value="03">March</option>
							<option value="04">April</option>
							<option value="05">May</option>
							<option value="06">June</option>
							<option value="07">July</option>
							<option value="08">August</option>
							<option value="09">September</option>
							<option value="10">October</option>
							<option value="11">November</option>
							<option value="12">December</option>
						</select>
					</label>

					<label class="input-select date-day" for="signup-catheterdate-day">
						<select id="signup-catheterdate-day" name="day">
							<option value="">Day</option>
							<option value="01">01</option>
							<option value="02">02</option>
							<option value="03">03</option>
							<option value="04">04</option>
							<option value="05">05</option>
							<option value="06">06</option>
							<option value="07">07</option>
							<option value="08">08</option>
							<option value="09">09</option>
							<option value="10">10</option>
							<option value="11">11</option>
							<option value="12">12</option>
							<option value="13">13</option>
							<option value="14">14</option>
							<option value="15">15</option>
							<option value="16">16</option>
							<option value="17">17</option>
							<option value="18">18</option>
							<option value="19">19</option>
							<option value="20">20</option>
							<option value="21">21</option>
							<option value="22">22</option>
							<option value="23">23</option>
							<option value="24">24</option>
							<option value="25">25</option>
							<option value="26">26</option>
							<option value="27">27</option>
							<option value="28">28</option>
							<option value="29">29</option>
							<option value="30">30</option>
							<option value="31">31</option>
						</select>
					</label>
				</div>


				<div class="form-wrapper radio-group icon-buttons">
					<label class="input-radio" for="signup-gender-female">
						<input id="signup-gender-female" name="gender" type="radio" value="female">
						<span class="icon icon-gender-female"></span>
						<span class="label">Female</span>
					</label>
					<label class="input-radio" for="signup-gender-male">
						<input id="signup-gender-male" name="gender" type="radio" value="male">
						<span class="icon icon-gender-male"></span>
						<span class="label">Male</span>
					</label>
				</div>

				<div class="form-wrapper checkbox-group">
					<label class="input-checkbox" for="signup-mobility-wheelchair">
						<input id="signup-mobility-wheelchair" name="mobility" type="checkbox" value="wheelchair">
						<span class="icon icon-checkmark"></span>
						<span class="label">I use a wheelchair</span>
					</label>
				</div>

			</div>

			<div class="form-row">
				<label class="input-text sm" for="signup-address1">
					<div class="label">Address</div>
					<input type="text" id="signup-address1" name="address">
				</label>

				<label class="input-text sm" for="signup-city">
					<div class="label">City</div>
					<input type="text" id="signup-city" name="city">
				</label>

				<label class="input-text sm" for="signup-state">
					<div class="label">State</div>
					<input type="text" id="signup-state" name="state">
				</label>
			</div>

			<div class="form-row">
				<label class="input-text sm" for="signup-zip">
					<div class="label">Zip code</div>
					<input type="text" id="signup-zip" name="zip">
				</label>

				<div class="form-wrapper sm">
					<label class="input-text sm input--small-bottom-spacing" for="signup-phone-areacode">
						<div class="label">Area code</div>
						<input type="text" id="signup-phone-areacode" name="phone-areacode" value="+45" disabled>
					</label>

					<label class="input-text lg last input--small-bottom-spacing" for="signup-phone">
						<div class="label">Phone no.</div>
						<input type="text" id="signup-phone" name="phone">
					</label>

					<label class="input-checkbox input--small" for="signup-phone-is-mobile">
						<input id="signup-phone-is-mobile" name="phone-is-mobile" type="checkbox" value="1">
						<span class="icon icon-checkmark"></span>
						<span class="label">Phone number is for cell phone</span>
					</label>
				</div>


				<label class="input-select sm" for="signup-country">
					<select id="signup-country" name="country" disabled>
						<option value="">Select country</option>
						<option value="opt1">UK</option>
						<option value="opt2" selected>US</option>
						<option value="opt3">Germany</option>
					</select>
				</label>
			</div>

			<div class="form-row button-group">
				<button class="input-submit" type="button">
					Submit
				</button>
			</div>


			<div class="form-row checkbox-group">
				<label class="input-checkbox sm input--small input--right" for="signup-terms">
					<input id="signup-terms" name="terms" type="checkbox" value="1">
					<span class="icon icon-checkmark"></span>
					<span class="label">I accept the <a href="#">terms and conditions</a></span>
				</label>
			</div>

		</div>

	</form>

	<div class="form-confirmation">
		<div class="form-header">
			<h1>Thank you for signing up</h1>
			<p>
				Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis.
			</p>
		</div>

		<div class="button-group">
			<a class="button popup-close" href="#">Continue</a>
		</div>
	</div>
</div>
