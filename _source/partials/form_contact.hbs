

<form>
	<div class="form-row">
		<label class="input-text md" for="contact-firstname">
			<div class="label">First name</div>
			<input type="text" id="contact-firstname" name="firstname" />
		</label>
		<label class="input-text md" for="contact-lastname">
			<div class="label">Last name</div>
			<input type="text" id="contact-lastname" name="lastname" />
		</label>
	</div>
	<div class="form-row">
		<label class="input-text md" for="contact-email">
			<div class="label">E-mail</div>
			<input type="email" id="contact-email" name="email" />
		</label>
		<label class="input-text md" for="contact-phone">
			<div class="label">Phone number <span class="optional">(optional)</span></div>
			<input type="tel" id="contact-phone" name="phone" />
		</label>
	</div>
	<div class="form-row">
		<label class="input-text" for="contact-subject">
			<div class="label">Subject</div>
			<input type="text" id="contact-subject" name="subject" />
		</label>
	</div>
	<div class="form-row">
		<label class="input-textarea" for="contact-message">
			<div class="label">Your message ...</div>
			<textarea id="contact-message" name="message"></textarea>
		</label>
	</div>

	<div class="button-group">

		<button class="input-submit" type="submit">
			Send
		</button>
	</div>

</form>
